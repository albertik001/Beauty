<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.authentication.onboard.OnboardStepFragment">

    <ImageView
        android:id="@+id/im_onboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/artisticViolet"
        android:scaleX="1.1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_onboard_first_step" />

    <TextView
        android:id="@+id/tv_onboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:maxEms="14"
        android:minEms="14"
        android:text="@string/distance_in_few_taps_from_next_appointment"
        android:textColor="@color/artisticViolet"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_onboard" />

    <TextView
        android:id="@+id/tv_onboard_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:maxEms="12"
        android:text="@string/the_application_to_salon_appointment_your_appointment_is_effortless_and_reliable"
        android:textColor="@color/wildBlueYonder"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_onboard_title" />

</androidx.constraintlayout.widget.ConstraintLayout>