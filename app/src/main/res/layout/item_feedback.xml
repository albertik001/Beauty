<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="26dp">

    <ImageView
        android:id="@+id/image_profile_master"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_master"
        style="@style/baseTextViewServicesSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Кристина Ким"
        android:textColor="@color/blueBlack"
        app:layout_constraintStart_toEndOf="@id/image_profile_master"
        app:layout_constraintTop_toTopOf="@id/image_profile_master" />

    <RatingBar
        android:id="@+id/rating_bar_master"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:numStars="5"
        android:rating="5"
        android:theme="@style/ratingBar"
        app:layout_constraintStart_toStartOf="@id/tv_name_master"
        app:layout_constraintTop_toBottomOf="@id/tv_name_master" />

    <TextView
        android:id="@+id/tv_text_feedback"
        style="@style/baseTextViewServicesSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="18"
        android:text="Приятная отмосфера, обслуживание класса люкс, специалисты своего дела!"
        android:textColor="@color/wildBlueYonder"
        app:layout_constraintStart_toStartOf="@id/image_profile_master"
        app:layout_constraintTop_toBottomOf="@id/rating_bar_master" />

</androidx.constraintlayout.widget.ConstraintLayout>